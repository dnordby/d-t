$vertical-spacing: 4.5rem;
$mobile-vertical-spacing: 2.25rem;
$active: #7796a8;
$disabled: #d3d3d3;
$error: #ffb2af;
$success: #dff0d8;
$white: #ffffff;
$black: {{ settings.color_text }};

* {
  outline: 0;
  &:active, &:focus, &:hover {
    outline: 0;
  }
}

.btn {
  border-radius: 0;
}

.full-width {
  padding: 0 3rem;
  &.stuck-header {
    top: 81px;
  }
  @media(max-width: 749px) {
    padding: 0 22px;
  }
}

#shopify-section-header {
  position: relative;
  z-index: 11;
}

.loader {
  background-color: $white;
  height: 100vh;
  left: 0;
  position: fixed;
  top: 0;
  transition: all 0.3s ease-in-out;
  width: 100vw;
  z-index: 10;
  &.hidden {
    opacity: 0;
    visibility: hidden;
    z-index: 0;
  }
  svg {
    left: 50%;
    position: absolute;
    top: 50%;
    transform: translateX(-50%) translateY(-50%);
  }
}

// QUOTE MENU
.quote-menu {
  border: 1px solid #7796a8;
  border-right: 1px solid $white;
  left: calc(3rem + 1px);
  max-width: 100%;
  position: fixed;
  top: 136px;
  width: 250px;
  z-index: 1;
  ul {
    li {
      cursor: pointer;
      padding: 1em;
      position: relative;
      transition: all 0.3s ease-in-out;
      &:before {
        background: url("{{ 'check.svg' | asset_url }}");
        background-repeat: no-repeat;
        background-size: cover;
        content: '';
        height: 0;
        opacity: 0;
        position: absolute;
        right: 1em;
        transition: all 0.3s ease-in-out;
        width: 0;
      }
      &:after {
        background: url("{{ 'error.svg' | asset_url }}");
        background-repeat: no-repeat;
        background-size: cover;
        content: '';
        height: 0;
        opacity: 0;
        position: absolute;
        right: 1em;
        transition: all 0.3s ease-in-out;
        width: 0;
      }
      &.active {
        background-color: $active;
        color: $white;
      }
      &.complete {
        background-color: $success;
        color: $black;
        &:before {
          height: 1.5rem;
          opacity: 1;
          width: 1.5rem;
        }
      }
      &.incomplete {
        background-color: $error;
        color: $black;
        &:after {
          height: 1.5rem;
          opacity: 1;
          width: 1.5rem;
        }
      }
      &.get-quote {
        background-color: $disabled;
        opacity: 0.5;
        pointer-events: none;
        &.cleared {
          pointer-events: auto;
        }
      }
    }
  }
}

// QUOTE FORM
#quote-form {
  border: 1px solid #7796a8;
  display: inline-block;
  margin-bottom: $vertical-spacing;
  margin-left: 250px;
  min-height: 300px;
  padding: 2rem;
  position: relative;
  width: calc(60% - 250px);

  .form-section {
    display: block;
    height: initial;
    position: relative;
    top: 0;
    transition: all 0.3s ease-in-out;
    width: 100%;
    z-index: 1;
    &.hidden {
      display: none;
      height: 0;
      z-index: 0;
    }
    .form-group {
      align-items: stretch;
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      margin-bottom: 2em;
      position: relative;
      .error-message {
        color: red;
        left: 0;
        opacity: 0;
        position: absolute;
        top: -2em;
        transition: all 0.3s ease-in-out;
        visibility: hidden;
        width: 100%;
      }
      &.error-state {
        .error-message {
          opacity: 1;
          top: -1.25em;
          visibility: visible;
        }
        input {
          border: 1px red solid;
        }
      }
      label {
        width: 100%;
      }

      .inline-form-item {
        &.garment-radio {
          margin: 1em 0 0 0;
          width: calc((100% / 2) - 1em);
        }
      }
      .garment-color {
        align-items: stretch;
        display: flex;
        flex-wrap: wrap;
        .color-radio {
          align-self: flex-start;
          margin: 0 5px 1.5em;
          text-align: center;
          width: calc((100% / 6) - 14px);
          label {
            font-weight: 500;
            transition: all 0.3s ease-in-out;
            &::before {
              border: 1px solid #e8e9eb;
              border-radius: 2px;
              content: '';
              display: block;
              height: 40px;
              margin: 0 auto;
              position: relative;
              transition: all 0.3s ease-in-out;
              width: 40px;
            }
          }
          &.active {
            label {
              font-weight: 900;
              &::before {
                border: 3px solid #e8e9eb;
              }
            }
          }
        }
        @media (max-width: 639px) {
          .color-radio {
            width: calc((100% / 4) - 4px);
          }
        }
      }
    }
    &.accordion {
      .accordion-item {
        width: 100%;
        .h4 {
          border-bottom: 1px solid #e8e9eb;
          cursor: pointer;
          padding-bottom: 0.25em;
          position: relative;
          &:after,
          &:before {
            backface-visibility: hidden;
            background-color: #e8e9eb;
            content: "";
            height: 2px;
            position: absolute;
            top: 50%;
            transition: all 0.3s ease-in-out;
            right: 0;
            width: 10px;
          }
          &:before {
            opacity: 1;
            transform: rotate(90deg);
          }
          &.open {
            &:before {
              opacity: 0;
              transform: rotate(0);
            }
          }
        }
        .expandable {
          max-height: 0;
          overflow: hidden;
          transition: all 0.3s ease-in-out;
          &.open {
            height: auto;
            margin-bottom: 1.5rem;
            max-height: 500px;
          }
        }
      }
    }
  }

  .direction {
    bottom: 0;
    display: flex;
    flex-wrap: nowrap;
    justify-content: space-between;
    left: 0;
    position: absolute;
    width: 100%;
    .prev-step,
    .next-step,
    .js-step-trigger-final {
      flex: 0 1 calc(50% - 1px);
    }
  }
}