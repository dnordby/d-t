{% assign page_handle = page.handle | downcase %}
{% assign page_name = page.title %}

<div class="page-width">
  <div class="grid">
    <div class="grid__item medium-up--five-sixths medium-up--push-one-twelfth">
      <div class="section-header text-center">
        <h1>{{ page_name }}</h1>
      </div>

      {% if page_handle == 'free-quote' %}
        {% include 'quote-form' %}
      {% else %}
        <div class="rte">
          {{ page.content }}
        </div>
      {% endif %}
    </div>
  </div>
</div>
